<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.views.create.CreateMovieFragment">


    <ProgressBar
        android:visibility="gone"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_oscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/oscar" />

        <TextView
            android:id="@+id/tv_enter_name"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="38dp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_enter_name"
            android:background="@drawable/edit_text_style_creating"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:hint="    Enter movie name"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_enter_genre"
            android:textSize="20sp"
            android:layout_below="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="134dp" />

        <EditText
            android:id="@+id/et_genre"
            android:layout_below="@+id/tv_enter_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style_creating"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="     Enter movie genre"
            android:layout_marginTop="161dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_enter_year"
            android:layout_below="@+id/et_genre"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="212dp" />

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_below="@+id/tv_enter_year"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="246dp"
            android:background="@color/md_yellow_800"
            android:entries="@array/years_array"
            android:prompt="@string/year_prompt"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_enter_duration"
            android:layout_below="@+id/spinner_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_duration"
            android:layout_below="@+id/tv_enter_duration"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginStart="19dp"
            android:background="@color/md_yellow_800"
            android:entries="@array/duration_array"
            android:prompt="@string/duration_prompt"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_image_url"
            android:layout_below="@+id/spinner_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="197dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_imageUrl"
            android:layout_below="@+id/tv_image_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="164dp"
            android:background="@drawable/edit_text_style_creating"
            android:hint="     Enter image URL"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_enter_description"
            android:layout_below="@+id/et_imageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="121dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_description"
            android:layout_below="@+id/tv_enter_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style_creating"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="79dp"
            android:hint="     Enter movie description"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_create"
            android:layout_below="@id/et_description"
            android:layout_width="101dp"
            android:background="@color/md_yellow_800"
            android:textColor="@color/background"
            android:text="ADD"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp" />


    </RelativeLayout>

</FrameLayout>