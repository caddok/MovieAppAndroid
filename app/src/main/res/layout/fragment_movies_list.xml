<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.views.movielist.MoviesListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:hint="@string/movie_search_hint"
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <AnimatedCircleLoadingView
            android:id="@+id/circle_loading_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@color/background"
            android:layout_centerInParent="true"/>
            <!--android:animCircleLoadingView_mainColor="@color/main_color"
            android:animCircleLoadingView_secondaryColor="@color/secondary_color"
            android:animCircleLoadingView_textColor="@android:color/white" -->

        <ListView
            android:layout_below="@id/et_search"
            android:id="@+id/lv_movies"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>



</FrameLayout>