<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.georgi.movieapp">

    <application
        android:allowBackup="true"
        android:name=".MovieApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".views.views.start.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.views.movielist.MoviesList" />
        <activity android:name=".views.views.moviedetails.MovieDetails" />
        <activity android:name=".views.views.about.AboutTheApp" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>