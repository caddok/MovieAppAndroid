<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.georgi.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".views.views.start.StartActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.views.movielist.MoviesList"
                  android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".views.views.moviedetails.MovieDetails"
                  android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".views.views.about.AboutTheAppActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".views.views.redactoptions.MovieRedactOptionsActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".views.views.redact.MovieRedactActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".views.views.create.CreateMovieActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"/>
</application>

</manifest>